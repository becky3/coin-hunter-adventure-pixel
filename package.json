{
  "name": "coin-hunter-adventure-pixel",
  "version": "0.1.0",
  "description": "A retro-style platformer game with pixel art graphics",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "timeout --preserve-status 600 node tests/e2e/run-all-tests.cjs 2>&1",
    "test:parallel": "timeout --preserve-status 600 node tests/e2e/run-tests-parallel.cjs 2>&1",
    "test:stable": "node tests/e2e/run-tests-stable.cjs",
    "test:basic": "node tests/e2e/test-basic-flow.cjs",
    "test:core": "node tests/e2e/test-basic-flow.cjs && node tests/e2e/test-jump-mechanics.cjs && node tests/e2e/test-enemy-damage.cjs",
    "test:full": "npm run test:parallel",
    "test:smoke": "npm run test:basic",
    "test:e2e": "npm run test:parallel",
    "test:performance": "node tests/e2e/test-performance.cjs",
    "test:stress": "node tests/e2e/test-stress.cjs",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "test:claude": "./scripts/claude-test.sh",
    "test:before-push": "npm run lint && node tests/e2e/run-tests-parallel.cjs"
  },
  "keywords": [
    "game",
    "platformer",
    "pixel-art",
    "canvas"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^8.50.0",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-local-rules": "^3.0.2",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.10.2",
    "typescript": "^5.8.3",
    "vite": "^4.4.0"
  },
  "dependencies": {
    "playwright": "^1.53.1"
  }
}
